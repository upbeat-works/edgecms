{
  "name": "@upbeat-works/edgecms-sdk",
  "version": "0.4.0",
  "description": "CLI SDK for EdgeCMS i18n - pull and push translations",
  "type": "module",
  "bin": {
    "edgecms": "./bin/edgecms.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "release": "npm run build && release-it"
  },
  "release-it": {
    "git": {
      "tagName": "sdk-v${version}",
      "commitMessage": "chore: release sdk v${version}"
    },
    "npm": {
      "publish": true
    },
    "hooks": {
      "before:init": "npm run typecheck"
    }
  },
  "dependencies": {
    "commander": "^12.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.9",
    "release-it": "^19.2.4",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18"
  }
}
